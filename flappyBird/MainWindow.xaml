<Window x:Class="flappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird"
        Height="490"
        Width="525"
		ResizeMode="NoResize">

	<Grid>
		<Grid x:Name="MenuScene">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="FLAPPY BIRD"
                           FontSize="36"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

				<Button Content="Start Game"
                        Width="200"
                        Margin="5"
                        Click="StartGame_Click"/>

				<Button Content="Credits"
                        Width="200"
                        Margin="5"
                        Click="Credits_Click"/>

				<Button Content="Exit"
                        Width="200"
                        Margin="5"
                        Click="Exit_Click"/>
			</StackPanel>
		</Grid>
		  
		<Grid>
			<Canvas Name="Canv"
				Background="LightSkyBlue"
				Focusable="True"
				KeyDown="KeyIsDown"
				KeyUp="KeyIsUp">


				<Image Width="200" Height="145" Source="/Image/clouds.png" Canvas.Left="50" Canvas.Top="100" Tag="cloud"/>
				<Image Width="200" Height="145" Source="/Image/clouds2.png" Canvas.Left="350" Canvas.Top="130" Tag="cloud"/>


				<Image Width="66" Height="390" Source="/Image/pipeBottom.png" Canvas.Left="400" Canvas.Top="300" Tag="pipe"/>
				<Image Width="66" Height="390" Source="/Image/pipeTop.png" Canvas.Left="400" Canvas.Top="-250" Tag="pipe"/>

				<Image Width="66" Height="390" Source="/Image/pipeBottom.png" Canvas.Left="700" Canvas.Top="250" Tag="pipe"/>
				<Image Width="66" Height="390" Source="/Image/pipeTop.png" Canvas.Left="700" Canvas.Top="-300" Tag="pipe"/>

				<Image Width="66" Height="390" Source="/Image/pipeBottom.png" Canvas.Left="1000" Canvas.Top="280" Tag="pipe"/>
				<Image Width="66" Height="390" Source="/Image/pipeTop.png" Canvas.Left="1000" Canvas.Top="-260" Tag="pipe"/>


				<Image x:Name="bird" Width="50" Height="36" Source="/Image/flappyBird.png" Canvas.Left="50" Canvas.Top="190"/>


				<Label x:Name="scoreLabel" Content="Score: 0" FontSize="22" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
			</Canvas>
		</Grid>
	</Grid>

</Window>
